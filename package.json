    }
  ],
  "keywords": [
    "wait",
    "until",
    "promise",
    "test"
  ],
  "author": "Alon Mizrahi",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-webpack-plugin": "^3.1.1",
    "jest": "^27.4.5",
    "nyc": "^15.1.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "ts-loader": "^9.2.6"
  },
  "nyc": {
    "reporter": [
      "text",
      "text-summary",
      "lcov",
      "html"
    ],
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": true
  }
